
{{ set_assets('applications/Notification/Addons/Subscription/assets/css/style.css') }}

{% import "form.macro.twig" as forms %}

<div class="newsletter-subscription">
    <div class="col-md-6">
        <div class="col-md-2">
            <i class="fa fa-envelope-o fa-5x"style=" vertical-align: middle;"></i>
        </div>
        <div class="col-md-10">
            <p>
                Sign up new to start receiving our weekly newsletters right away. Plus with every email you will receive exclusive content about future events and activities.
            </p>
        </div>
    </div>
    <div class="col-md-6">
        <div class="col-md-4">
            Name
            {{ forms.input('name', 'text', null) }}
        </div>
        <div class="col-md-4">
            Email
            {{ forms.input('email', 'text', null) }}
        </div>
        <div class="col-md-4">
            <br>
            <!-- Split button -->
            <div class="btn-group">
                <button type="submit" class="btn btn-success btn-flat"name="submit"value="Submit">
                    Subscribe
                    <span >
                        <i class="fa fa-arrow-circle-o-right"></i>
                    </span>
                </button>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>